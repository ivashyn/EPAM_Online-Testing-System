@model OnlineTestingSystem.BLL.ModelsDTO.QuestionAnswerDTO
<div>
    @*@Html.HiddenFor(x => x.Id)*@
    @*<h3> @Model.QuestionDTO.QuestionText </h3>*@


    <div class="form-group col-md-6">
        @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.TextAreaFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" } })

            @Html.CheckBoxFor(model => model.IsRight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
        </div>
    </div>
    
</div>
