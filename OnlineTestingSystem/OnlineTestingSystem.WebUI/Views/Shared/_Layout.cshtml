<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TestService", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Catalog", "AllTests", "Test")</li>
                    <li>@Html.ActionLink("Contacts", "Index", "Home")</li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Registration", "Register", "Account")</li>
                    }
                    else
                    {
                        <li>
                            <a>@User.Identity.Name</a>
                        </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                </ul>
                <form class="navbar-form navbar-left pull-right">
                    <div class="form-group">
                        @using (Html.BeginForm("Search", "Certificate", FormMethod.Post))
                        {
                            @*<p>@Html.TextBoxFor(x => x.CategoryName)</p>*@
                            <input type="text" id="certificateNumber" name="certificateNumber" class="form-control" placeholder="Find sertificate by ID">
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <span class="col-lg-4 col-md-4" style="text-align:center"> <i class="fa fa-envelope" aria-hidden="true" style="color:darkred"></i> ivashyn.vadym@gmail.com</span>
                <span class="col-lg-4 col-md-4" style="text-align:center"> <i class="fa fa-skype" aria-hidden="true" style="color:deepskyblue"></i> zevas.</span>
                <span class="col-lg-4 col-md-4" style="text-align:center"> <i class="fa fa-mobile" aria-hidden="true"></i> +38096 85 90 222</span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
